@model QLKHOXD.Models.VatTu

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-wrapper">
    <div class="content container-fluid">
        <h1>Chỉnh Sửa Vật Tư</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaVt" />
            <div class="form-group">
                <label asp-for="TenVt" class="control-label">Tên Vật Tư</label>
                <input asp-for="TenVt" class="form-control" />
                <span asp-validation-for="TenVt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label">Số Lượng</label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Donvitinh" class="control-label">Đơn Vị Tính</label>
                <input asp-for="Donvitinh" class="form-control" />
                <span asp-validation-for="Donvitinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mota" class="control-label">Mô Tả</label>
                <input asp-for="Mota" class="form-control" />
                <span asp-validation-for="Mota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TinhTrangVt" class="control-label">Tình Trạng Vật Tư</label>
                <input asp-for="TinhTrangVt" class="form-control" />
                <span asp-validation-for="TinhTrangVt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DSVatTu">Back to List</a>
</div>

</div>
</div>
@model IEnumerable<QLKHOXD.Models.NguoiDung>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <h1>Danh Sách Nhân Viên Kho</h1>

        <div class="actions">
            <input type="text" placeholder="Search" id="searchInput">
            <button id="addUserButton">Tìm Kiếm</button>
            <select id="sortOptions">
                <option value="name">Sort by Name</option>
                <option value="date">Sort by Date</option>
            </select>
            
            <button style="width:100px; padding:0px 10px 0px 15px; background-color:dodgerblue;">
                <a asp-action="Create" style="width:100px; color:black">Thêm Mới</a>
            </button>
        </div>
       
        <div class="dashboard">
            <div class="dashboard-header">
                <table class="table" id="userTable">
                    <thead>
                        <tr>
                            <th>
                                Họ Tên
                            </th>
                            <th>
                                Tài Khoản
                            </th>
                            <th>
                                Mật Khẩu
                            </th>
                            <th>
                                Giới Tính
                            </th>
                            <th>
                                Điện Thoại
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Địa chỉ
                            </th>
                            <th>
                                Trạng Thái
                            </th>
                            <th>
                                Ngày Tạo
                            </th>
                            <th>
                                Vai Trò
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoTen)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TaiKhoan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MatKhau)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GioiTinh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DienThoai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiaChi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TrangThai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayTao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdVaitroNavigation.TenVaitro)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.MaNv">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
            </div>
        </div>
        <div class="pagination">
            <button id="prevPage">&lt;</button>
            <span id="pageInfo">1 of 1</span>
            <button id="nextPage">&gt;</button>
        </div>
    </div>
</div>
<style>



    .greeting {
        font-size: 20px;
        font-weight: bold;
    }

    .sub-greeting {
        font-size: 16px;
        color: #666;
    }

    .user-info {
        display: flex;
        align-items: center;
    }

        .user-info span {
            margin-left: 10px;
        }

        .user-info .role {
            background-color: #e0e7ff;
            color: #1a73e8;
            padding: 2px 8px;
            border-radius: 4px;
            margin-left: 10px;
        }

    .dashboard {
        margin-top: 20px;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .dashboard-header h1 {
            margin: 0;
        }

    .actions {
        display: flex;
        align-items: center;
    }

        .actions input,
        .actions select,
        .actions button {
            margin-left: 10px;
            padding: 5px 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

    #userTable {
        width: 100%;
        border-collapse: collapse;
    }

        #userTable th,
        #userTable td {
            padding: 10px;
            border: 1px solid #ddd;
        }

        #userTable th {
            background-color: #f4f6f9;
        }

    .pagination {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
    }

        .pagination button {
            padding: 5px 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            background-color: #fff;
            cursor: pointer;
        }

            .pagination button:hover {
                background-color: #f0f0f0;
            }

</style>
